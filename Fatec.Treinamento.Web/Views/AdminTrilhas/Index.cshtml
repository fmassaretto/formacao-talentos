@model IEnumerable<Fatec.Treinamento.Model.Trilha>

@{
    ViewBag.Title = "Trilhas";
    ViewBag.Author = "Fabio Massaretto";
}

<div class="container-fluid">
    <div id="div-action-title" class="full-width-div">
        <h2>Trilhas</h2>
    </div>
</div>
<main>
    <div class="main-content">
        <p>
            <a href="@Url.Action("Criar")" class="btn btn-primary">Nova Trilha</a>
            <a href="@Url.Action("Index", "Painel")" class="btn btn-default">Voltar ao Painel</a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ativa)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ativa)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                        @Html.ActionLink("Excluir", "Excluir", new { id = item.Id }) |
                        @Html.ActionLink("Cursos da Trilha", "VincularCursos", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</main>